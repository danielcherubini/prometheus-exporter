{
    "name": "prometheus-exporter",
    "version": "0.0.9",
    "description": "Library to run the official prometheus node_exporter as a child process",
    "homepage": "https://github.com/danmademe/prometheus-exporter",
    "author": {
        "name": "Daniel Cherubini",
        "email": "daniel@cherubini.casa",
        "url": "https://cherubini.casa"
    },
    "files": [
        "lib",
        "download.js"
    ],
    "main": "lib/index.js",
    "keywords": [
        "prometheus",
        "node_exporter",
        "stats"
    ],
    "ava": {
        "files": [
            "tests/*.js"
        ],
        "source": [
            "src/**/*.js",
            "!lib/**/*"
        ],
        "concurrency": 5,
        "failFast": true,
        "powerAssert": false,
        "require": [
            "babel-register"
        ],
        "babel": "inherit"
    },
    "nyc": {
        "include": [
            "lib/**/*.js"
        ],
        "reporter": [
            "text-summary"
        ]
    },
    "devDependencies": {
        "ava": "^3.5.1",
        "babel-eslint": "^7.2.3",
        "coveralls": "^3.0.0",
        "eslint": "^4.0.0",
        "eslint-config-xo-space": "^0.16.0",
        "eslint-plugin-flowtype": "^2.34.0",
        "flow-bin": "^0.55.0",
        "flow-remove-types": "^1.2.1",
        "nsp": "^2.6.3",
        "nyc": "^11.0.2"
    },
    "scripts": {
        "start": "npm run build && node app.js",
        "build": "rm -rf lib && npm run copy && npm run prom-install",
        "prom-install": "node download.js",
        "copy": "cp -r src lib && flow-remove-types lib/ -d lib/ -p -i .flow",
        "prepare": "nsp check",
        "pretest": "eslint .",
        "test": "npm run build && nyc ava",
        "postinstall": "npm run prom-install",
        "preversion": "npm run test",
        "version": "git add .",
        "postversion": "git push --follow-tags",
        "coverage": "nyc report --reporter=text-lcov | coveralls"
    },
    "eslintConfig": {
        "extends": "xo-space",
        "env": {
            "jest": true,
            "node": true
        }
    },
    "repository": "danmademe/prometheus-exporter",
    "license": "Apache-2.0",
    "dependencies": {
        "axios": "^0.16.2",
        "decompress-targz": "^4.1.0"
    }
}
